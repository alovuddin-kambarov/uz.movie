<?xml version="1.0" encoding="utf-8"?><navigation xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/navigation"    app:startDestination="@id/mainFragment">    <fragment        android:id="@+id/homeFragment"        android:name="uz.coder.uzmovie.ui.fragments.HomeFragment"        android:label="fragment_home"        tools:layout="@layout/fragment_home" >        <action            android:id="@+id/action_homeFragment_to_savedFragment"            app:destination="@id/savedFragment" />    </fragment>    <fragment        android:id="@+id/savedFragment"        android:name="uz.coder.uzmovie.ui.fragments.SavedFragment"        android:label="fragment_saved"        tools:layout="@layout/fragment_saved" >        <action            android:id="@+id/action_savedFragment_to_profileFragment"            app:destination="@id/profileFragment" />    </fragment>    <fragment        android:id="@+id/profileFragment"        android:name="uz.coder.uzmovie.ui.fragments.ProfileFragment"        android:label="fragment_profile"        tools:layout="@layout/fragment_profile" />    <fragment        android:id="@+id/mainFragment"        android:name="uz.coder.uzmovie.ui.fragments.MainFragment"        android:label="fragment_main"        tools:layout="@layout/fragment_main" />    <fragment        android:id="@+id/searchFragment"        android:name="uz.coder.uzmovie.ui.fragments.SearchFragment"        android:label="fragment_search"        tools:layout="@layout/fragment_search" /></navigation>